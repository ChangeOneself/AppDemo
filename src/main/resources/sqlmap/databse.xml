<?xml version="1.0" encoding="UTF-8" ?>
        <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="app.mapper.AppMapper">
<update id="creatDatabase" parameterType="java.lang.String">
        create database if not exists `${databaseName}`;
    </update>

<update id="createTable" parameterType="java.lang.String">
        create table ${schemaName}.${tableName}  (
            id varchar(6000),
            name varchar(6000)
        )
</update>

<select id="selectOne" resultType="java.lang.String">
        select id from one;
    </select>

    <update id="createAppTable">
        create table if not exists appdb_table  (
            id varchar(6000),
            name varchar(6000)
        )
</update>
</mapper>